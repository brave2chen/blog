/* 全屏-不呈现 */
.fullscreen-wrapper {
  display: none;
}

/* 备案-不呈现 */
.footer-wrapper {
    display: none;
}


.content__default:not(.custom) {
    max-width: 1000px !important;
}

.theorem
  margin 1rem 0
  padding .1rem 1.5rem
  border-radius 0.4rem
  background-color #f0f4f8
  .title
    font-weight bold
.custom-block
  &.right
    color transparentify($textColor, 0.4)
    font-size 0.9rem
    text-align right

.custom-block.tip .custom-block-title {
  color: #67cc86;
}